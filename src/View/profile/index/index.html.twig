{% extends 'BikeDashboardBundle::layout.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        个人中心
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> 首页</li>
        <li><a href="{{ path('profile') }}">个人中心</a></li>
        <li class="active">编辑</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">账号信息</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" id="profile-form">
<div class="row">
    <div class="col-md-6 col-sm-12 col-xs-12">
              <div class="box-body">
                <div class="callout callout-danger" style="display:none">
                  <h4>保存失败</h4>
                  <p></p>
                </div>
                <div class="form-group">
                  <label for="name">姓名</label>
                  <input type="text" class="form-control" value="{{ admin.getName() }}" id="name" name="name" placeholder="" required="required">
                </div>
                <div class="form-group">
                  <label for="username">用户名</label>
                  <input type="text" class="form-control" value="{{ admin.getUsername() }}" id="username" name="username" placeholder="" required="required">
                </div>
                <div class="form-group">
                  <label for="pwd">密码</label>
                  <input type="password" class="form-control" id="pwd" name="pwd" placeholder="不修改请留白">
                </div>
                <div class="form-group">
                  <label for="repwd">确认密码</label>
                  <input type="password" class="form-control" id="repwd" name="repwd" placeholder="不修改请留白">
                </div>
              </div>
              <!-- /.box-body -->
    </div>
</div>

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">保存</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script>
$(function(){
    var $form = $('#profile-form');
    $form.submit(function(){
        var url = '{{ path('profile') }}';
        var data = $form.serializeArray();

        $form.find('button[type="submit"]').prop('disabled', true);
        $.post(url, data, function(result){
            if (result.errno == 0) {
                window.location.href = '{{ path('profile') }}';
            } else {
                $form.find('.callout-danger').show().find('p').html(result.errmsg);
            }
            $form.find('button[type="submit"]').prop('disabled', false);
        });
        return false;
    });
});
</script>
{% endblock %}
