                                    <td>
                                        <button data-url="#" type="button" class="btn btn-info link"><i class="fa fa-fw fa-eye"></i>查看</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>377979</td>
                                    <td>063072965557</td>
                                    <td>二维码脱落,刹车失灵,车胎漏气</td>
                                    <td>13612670009</td>
                                    <td>2017-03-26 11:14:26</td>
                                    <td>
                                        <button data-url="#" type="button" class="btn btn-info link"><i class="fa fa-fw fa-eye"></i>查看</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>370141</td>
                                    <td>063072632892</td>
                                    <td>链条掉了</td>
                                    <td>15070917200</td>
                                    <td>2017-03-25 16:57:26</td>
                                    <td>
                                        <button data-url="#" type="button" class="btn btn-info link"><i class="fa fa-fw fa-eye"></i>查看</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>     
</section>
    <!-- /.content -->
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script type="text/javascript">
    $('.date-range').daterangepicker({
        locale:{
            format: 'YYYY-MM-DD',
            isAutoVal:false,
        }
    });

    $("#filter_type").change(function() {
        $("#filter_text").attr("name", $(this).val());
    });
</script>
{% endblock %}