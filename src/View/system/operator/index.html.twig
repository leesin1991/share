{% extends 'BikeDashboardBundle::layout.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        运营设置
        <small> operator</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">系统设置</li>
        <li >运营设置</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <!-- tab 标签 -->
                <ul class="nav nav-tabs">
                    <li class="active"><a href="javascript:;" data-toggle="tab">运营设置</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="bicycle">
                        
                        <form id="table_form" class="table_form" method="post">
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                      <div class="box-body">
                                        <div class="callout callout-danger" style="display:none">
                                          <h4>保存失败</h4>
                                          <p></p>
                                        </div>
                                        <div class="form-group">
                                          <label for="name">押金(元)</label>
                                          <input type="text" class="form-control" value="99.00" id="name" name="name" placeholder="" required="required">
                                        </div>
                                        <div class="form-group">
                                          <label for="username">微信公众号</label>
                                          <input type="text" class="form-control" value="百宝单车" id="username" name="username" placeholder="" required="required">
                                        </div>
                                        <div class="form-group">
                                          <label for="phone">联系电话</label>
                                          <input type="text" class="form-control" id="email" name="email" value="021-12345678">
                                        </div>
                                        <div class="form-group">
                                          <label for="text">Email</label>
                                          <input type="text" class="form-control" id="email" name="email" value="help@baibaobike.com">
                                        </div>
                                        <div class="form-group">
                                          <label for="name">官网</label>
                                          <input type="text" class="form-control" value="www.baibaobiek.com" id="website" name="website" placeholder="" required="required">
                                        </div>
                                        <div class="box-footer">
                                            <button type="submit" class="btn btn-primary">保存</button>
                                          </div>
                                      </div>
                                      <!-- /.box-body -->
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>     
</section>
    <!-- /.content -->
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script type="text/javascript">
    $('.date-range').daterangepicker({
        locale:{
            format: 'YYYY-MM-DD',
            isAutoVal:false,
        }
    });

    $("#filter_type").change(function() {
        $("#filter_text").attr("name", $(this).val());
    });
</script>
{% endblock %}