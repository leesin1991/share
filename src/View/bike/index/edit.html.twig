{% extends 'BikeDashboardBundle::layout.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        编辑单车
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> 首页</li>
        <li>单车管理</li>
        <li><a href="{{ path('bike_list') }}">单车</a></li>
        <li class="active">编辑</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">单车信息</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <form role="form" id="edit-bike-form">
                  <div class="row">
                      <div class="col-md-6 col-sm-12 col-xs-12">
                      <div class="box-body">
                        <div class="callout callout-danger" style="display:none">
                          <h4>编辑失败</h4>
                          <p></p>
                        </div>
                        <div class="form-group">
                          <label for="region">经纬度</label><br/>
                          <input type="text" class="" id="lng" name="lng" placeholder="经度" value="{{ bike.getLng() }}" required="required">-
                          <input type="text" class="" id="lat" name="lat" placeholder="纬度" value="{{ bike.getLat() }}" required="required">
                        </div>
                      </div>
                      <!-- /.box-body -->
                  </div>
              </div>

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">保存</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div id="myPageTop" style="float:left;">
          <table>
              <tr>
                  <td>
                      <label>按关键字搜索：</label>
                  </td>
                  <td class="column2">
                      <label>左击自动填充经纬度：</label>
                  </td>
              </tr>
              <tr>
                  <td>
                      <input type="text" placeholder="请输入关键字进行搜索" id="tipinput">
                  </td>
              </tr>
          </table>
      </div>
      <div id="container" style="width:100%; height:500px;"></div> 

    </section>
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script type="text/javascript" src="https://webapi.amap.com/maps?v=1.3&key=8c4198dace7c007839f8933c6815ba28&plugin=AMap.Autocomplete"></script>
<script>
    //初始化地图对象，加载地图
    ////初始化加载地图时，若center及level属性缺省，地图默认显示用户当前城市范围
    var map = new AMap.Map('container', {
        resizeEnable: true,
        zoom: 11,
        center: [121.475391,31.219963]
    });

    //为地图注册click事件获取鼠标点击出的经纬度坐标
    var clickEventListener = map.on('click', function(e) {
        document.getElementById("lng").value = e.lnglat.getLng();
        document.getElementById("lat").value = e.lnglat.getLat();
    });
    var auto = new AMap.Autocomplete({
        input: "tipinput"
    });
    AMap.event.addListener(auto, "select", select);//注册监听，当选中某条记录时会触发
    function select(e) {
        if (e.poi && e.poi.location) {
            map.setZoom(15);
            map.setCenter(e.poi.location);
        }
    }
</script>

<script>
$(function(){
    var $form = $('#edit-bike-form');
    $form.submit(function(){
        var url = '{{ path('bike_edit',{id: bike.getId()}) }}';
        var data = $form.serializeArray();

        $form.find('button[type="submit"]').prop('disabled', true);
        $.post(url, data, function(result){
            if (result.errno == 0) {
                window.location.href = '{{ path('bike_list') }}';
            } else {
                $form.find('.callout-danger').show().find('p').html(result.errmsg);
            }
            $form.find('button[type="submit"]').prop('disabled', false);
        });
        return false;
    });
});
</script>
{% endblock %}
